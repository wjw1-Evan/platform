<!-- START Top Navbar-->
<nav class="navbar topnavbar">
    <!-- START navbar header-->
    <div class="navbar-header">
        <a href="javascript:;" class="navbar-brand">
            <div class="brand-logo">
                <img src="~/Content/bosheng/boshenglogo-01.png" alt="App Logo" class="img-responsive center-block" />
            </div>
            <div class="brand-logo-collapsed">
                <img src="~/Content/bosheng/boshenglogo-02.png" alt="App Logo" class="img-responsive center-block" />
            </div>
        </a>
    </div>
    <!-- END navbar header-->
    <!-- START Nav wrapper-->
    <div class="nav-wrapper">

        <ul class="nav navbar-nav">
            <li>
                <!-- Button used to collapse the left sidebar. Only visible on tablet and desktops-->
                <a href="javascript:;" data-toggle-state="aside-collapsed" class="hidden-xs">
                    <em class="fa fa-navicon"></em>
                </a>
                <!-- Button to show/hide the sidebar on mobile. Visible on mobile only.-->
                <a href="javascript:;" data-toggle-state="aside-toggled" data-no-persist="true" class="visible-xs sidebar-toggle">
                    <em class="fa fa-navicon"></em>
                </a>
            </li>
            <!-- START User avatar toggle-->
        </ul>

        <!-- START Right Navbar-->
        <ul class="nav navbar-nav navbar-right">
            <li style="padding-top: 10px;">
                @Html.DropDownList("sysEnterprises", null, null, new { @class = "form-control input-sm" })
                <script>
                    $(function () {
                        $('select[id=sysEnterprises]').bind("change", function () {
                            window.location = "?changesysenterprise=" + $(this).val();

                        });
                    })
                </script>
            </li>

            <li>
                <a href="#@Url.Action("Index","ChangePassword")" title="修改密码">
                    @ViewBag.UserName
                </a>
            </li>

            <li>
                <a title="桌面" href="javascript:void(0);" onclick="window.location.href='#@Url.Action("Index", "Desktop")?_='+Math.random()">
                    <em class="fa fa-home"></em>
                </a>
            </li>

            <!-- START Alert menu-->
            <li class="dropdown dropdown-list">
                <a title="消息" href="javascript:void(0);" onclick="window.location.href='#@Url.Action("Index", "MyMessage")?_='+Math.random()">
                    <em class="fa fa-bell-o"></em>
                </a>

            </li>
            <!-- END Alert menu-->
            <!-- START Contacts button-->
            <li>
                <a href="javascript:;" data-toggle-state="offsidebar-open" data-no-persist="true" title="系统设置">
                    <em class="fa fa-cog"></em>
                </a>
            </li>

            <li>
                <a href="@Url.Action("LogOff", "Account", new {Area = ""})" title="退出系统">
                    <em class="fa fa-sign-out"></em>
                </a>
            </li>
            <!-- END Contacts menu-->
        </ul>
        <!-- END Right Navbar-->
    </div>
    <!-- END Nav wrapper-->

</nav>
<!-- END Top Navbar-->